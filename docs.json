{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "API Docs Hub",
  "colors": {
    "primary": "#8a0f0f",
    "light": "#981010",
    "dark": "#15803D"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "API Docs Hub",
        "groups": [
          {
            "group": "API Docs Hub Overview",
            "pages": [
              "index",
              "about-me"             
            ]
          }

        ]
      },
   
      {
        "tab": "Dribble API",
        "groups": [
          {
            "group": "Opening",
            "pages": [
              "dribble-api/introduction"
            ]
          },
          {
            "group": "Restructured pages",
            "pages": [
              "dribble-api/quickstart",
              "dribble-api/authentication"
            ]
          }
  
        ]
      },  
      {
        "tab": "RexPay API",
        "groups": [
          {
            "group": " ",
            "pages": [
              "rexpay-api/introduction"
            ]
          },
          {
            "group": "Restructured pages",
            "pages": [ 
              "rexpay-api/overview",
              "rexpay-api/quickstart",
              "rexpay-api/errors"
            ]
          },
          {
            "group": " ",
            "openapi" : "api-reference/openapi.json",
            "expanded": true
          }
        ]
      },
      {
        "tab": "Love API",
        "groups": [
          {
            "group": " ",
            "pages": [
              "love-api/overview",
              "love-api/introduction"
            ]
          },
          {
            "group": " ",
            "openapi" : "api-reference/openapi-love.json",
            "expanded": true
          }
        ]
      }
    ]
  },
  "api": {
    "playground": {
      "display": "interactive"
    },
    "examples": {
      "languages": ["curl", "python", "javascript", " ruby", "go", "java", "csharp"],
